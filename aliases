# ~/.aliases

alias start_redis='redis-server /usr/local/etc/redis.conf'
alias start_memcached='memcached -vv'
alias memcached='/usr/local/bin/memcached -d' # start memcached daemon
alias b="bundle"
alias be='bundle exec'
alias bake='bundle exec rake'
alias cuc="bundle exec cucumber"
alias migrate="rake db:migrate db:test:prepare"
alias remigrate="rake db:migrate && rake db:migrate:redo && rake db:schema:dump db:test:prepare"
alias remongrate="rake mongoid:migrate && rake mongoid:migrate:redo"
alias s="bundle exec rspec"
alias gi="gem install"
alias giv="gem install -v"
alias tlf="tail -f"

alias clearlog='cat /dev/null > log/cucumber.log > log/development.log'

# Git shortcuts
alias g='git'
alias got='git'
alias get='git'

alias ga='git add -A && git status'
alias gb='git branch'
alias gco='git checkout'
alias gac='git commit -am'
alias gc='git commit -m'
alias gpp="git pull --rebase && git push"
alias gp="git push"
alias gd='git diff'
alias gdx='git diff | gitx'
alias gf='git fetch'
alias go='git checkout'
alias gpr='git pull --rebase'
alias gpu='git push'
alias gr='git rebase'
alias grc='git rebase --continue'
alias gra='git rebase --abort'
alias gst='git status'
alias st='stree'
alias gup='git fetch origin && git rebase origin/master'

# Other
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'

alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# Mercurial
alias h='hg'
alias ha='hg add'
alias hb='hg branch'
alias hbs='hg branches'
alias hco='hg checkout'
alias hup='hg update'
alias hp='hg push'
alias hst='hg status'
alias hc='hg commit -m'
alias hpr='hg pull && hg update'
alias hpp='hg pull && hg update && hg push'
