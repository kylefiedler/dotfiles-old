# ADD LOCAL CONFIGURATION HERE
[github]
	user = kylefiedler
[push]
  default = current
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = ~/.gitignore
[format]
  pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s
[alias]
  c = commit
  l = log
  a = add
  aa= !git add -u && git add . && git status
  d = diff
  dt = difftool
  mt = mergetool
  pl = pull
  ps = push
  pr = pull --rebase
  st = status
  out = log origin..HEAD
  qpl = log --pretty=\"%Cblue%h%Creset %Cgreen[%cr]%Creset %s\" origin/production..origin/master
  graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  cm = commit -m
  ca = commit --amend
  cleanup = !git remote prune origin && git gc && git clean -dfx && git stash clear
  up = !git fetch origin && git rebase origin/master
  ir = !git rebase -i origin/master
  who = shortlog -n -s --no-merges
  unfuck = reset --hard HEAD
  goddammit = reset --hard HEAD~1
  co = checkout
  cob = checkout -b
  cp = cherry-pick
  reviewtool = !sh -c 'SHA=${1:-HEAD}; BRANCH=${2:-master}; if [ $SHA == $BRANCH ] ; then SHA=HEAD; fi; git difftool -y -t Kaleidoscope $BRANCH...$SHA;' -
  showtool = !sh -c 'SHA=${1:-HEAD}; git difftool -y -t Kaleidoscope $SHA^..$SHA;' -
[user]
  name = Kyle Fiedler
  email = kyle@kylefiedler.com
[branch "master"]
  rebase = true
[remote "origin"]
  push = HEAD
[mergetool]
  keepBackup = false
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[merge]
	tool = Kaleidoscope
